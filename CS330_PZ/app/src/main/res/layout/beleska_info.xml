<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="Naslov: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText android:id="@+id/naslov3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:text="Tekst: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText android:id="@+id/beleska3"
        android:layout_width="match_parent"
        android:gravity="top"
        android:layout_height="250dp"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Datum:"/>

    <TextView
        android:id="@+id/datum7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status:"/>


    <RadioGroup
        android:id="@+id/radioCheck4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <RadioButton
            android:id="@+id/radioUradjeno2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urađeno"
            android:checked="true"
            />

        <RadioButton
            android:id="@+id/radioNijeUradjeno2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nije urađeno"
            />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/save4"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:scaleType="fitCenter"
            android:src="@drawable/save_512x512"
            android:layout_weight="1"
            />

        <ImageButton
            android:id="@+id/delete7"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:scaleType="fitCenter"
            android:src="@drawable/trash_512x512"
            android:layout_weight="1"
            />

    </LinearLayout>


</LinearLayout>